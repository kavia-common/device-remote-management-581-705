# Database Configuration
POSTGRES_DB=myapp
POSTGRES_USER=appuser
POSTGRES_PASSWORD=dbuser123
POSTGRES_PORT=5432
POSTGRES_EXTERNAL_PORT=5000

# Redis Configuration
REDIS_EXTERNAL_PORT=6379

# Backend Configuration
BACKEND_PORT=8080
JWT_SECRET=change-this-secret-key-in-production-use-openssl-rand-hex-32
JWT_EXPIRES_IN=3600

# CORS Configuration (comma-separated origins)
# Include frontend URL and any additional origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Celery Configuration (managed by docker-compose, no need to change)
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/1

# Server-Sent Events
ENABLE_SSE=true

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8080


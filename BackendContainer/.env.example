# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# Database Configuration
# DATABASE_URL will be set by the deployment system based on db_connection.txt
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://appuser:dbuser123@localhost:5000/myapp

# Database Pool Configuration
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# JWT Configuration
# IMPORTANT: Change these secrets in production!
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Protocol Configuration
# Enable/disable specific protocols
SNMP_ENABLED=true
WEBPA_ENABLED=true
TR69_ENABLED=true
TR369_ENABLED=true

# SNMP Configuration (if using SNMP protocol)
SNMP_TIMEOUT=5000
SNMP_RETRIES=3

# WebPA Configuration (if using WebPA protocol)
WEBPA_TIMEOUT=30000

# TR-069 Configuration (if using TR-069 protocol)
TR69_ACS_URL=http://localhost:7547
TR69_TIMEOUT=30000

# TR-369 Configuration (if using TR-369 protocol)
TR369_CONTROLLER_ENDPOINT=
TR369_MTP_PROTOCOL=STOMP

# Audit Logging
AUDIT_LOG_ENABLED=true

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

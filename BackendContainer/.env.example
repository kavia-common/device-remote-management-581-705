# Database connection string (async driver)
# Example for local DBContainer: postgresql+asyncpg://appuser:dbuser123@localhost:5000/myapp
DATABASE_URL=postgresql+asyncpg://appuser:dbuser123@localhost:5000/myapp

# JWT configuration
JWT_SECRET=PLEASE_CHANGE_ME
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=3600

# CORS origins (comma separated). Include the FrontendContainer URL.
# Example: http://localhost:5173
CORS_ORIGINS=http://localhost:5173

# App metadata
APP_NAME=Device Remote Management API
APP_VERSION=0.1.0

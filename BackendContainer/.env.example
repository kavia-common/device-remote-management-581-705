# Database Connection
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://appuser:dbuser123@localhost:5000/myapp

# Celery Broker and Result Backend (Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# JWT Authentication
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=change-this-secret-key-in-production-use-openssl-rand-hex-32
JWT_EXPIRES_IN=3600

# CORS Configuration
# Comma-separated list of allowed origins
# Must include the frontend URL(s)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Server-Sent Events (for job progress notifications)
ENABLE_SSE=true

# Application Port
PORT=8080

# Optional: Logging Configuration
LOG_LEVEL=INFO

# Optional: File Upload Limits
MAX_UPLOAD_SIZE_MB=50

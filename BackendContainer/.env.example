# Database Connection
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://appuser:dbuser123@localhost:5000/myapp

# Celery Broker and Result Backend (Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# JWT Authentication
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=change-this-secret-key-in-production-use-openssl-rand-hex-32
JWT_EXPIRES_IN=3600

# CORS Configuration
# Comma-separated list of allowed origins
# Must include the frontend URL(s)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Server-Sent Events (for job progress notifications)
ENABLE_SSE=true

# Application Port
PORT=8080

# Optional: Logging Configuration
LOG_LEVEL=INFO

# Optional: File Upload Limits
MAX_UPLOAD_SIZE_MB=50

# ========================================
# Protocol Client Configuration
# ========================================

# SNMP Configuration
SNMP_DEFAULT_TIMEOUT=5.0
SNMP_DEFAULT_RETRIES=3
SNMP_DEFAULT_PORT=161
SNMP_MAX_REPETITIONS=25

# WebPA Configuration
WEBPA_DEFAULT_TIMEOUT=30.0
WEBPA_DEFAULT_RETRIES=3
# Optional: Default WebPA endpoint (can be overridden per-device)
# WEBPA_ENDPOINT=http://webpa-service:8080

# TR-069 Configuration
TR069_DEFAULT_TIMEOUT=60.0
TR069_DEFAULT_RETRIES=3
# Required: ECO ACS REST API endpoint
# TR069_ACS_ENDPOINT=http://acs-server:8080
# Optional: ECO ACS credentials (if using basic auth)
# TR069_ACS_USERNAME=acs_admin
# TR069_ACS_PASSWORD=acs_password

# USP Configuration
USP_DEFAULT_TIMEOUT=30.0
USP_DEFAULT_RETRIES=3
# Required: USP controller endpoint
# USP_CONTROLLER_ENDPOINT=http://usp-controller:8080
# Transport mode: http, mqtt, or websocket (default: http)
USP_TRANSPORT_MODE=http
# Optional: MQTT broker for USP (if using MQTT mode)
# USP_MQTT_BROKER=mqtt://mqtt-broker:1883
USP_MQTT_PORT=1883
